<!DOCTYPE html>
<html>
<head>
  <title>Benchmark</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<div id="wrapper">
  <header>
    <h1 id="logo">Benchmark</h1>
    <% if session[:user_id] %>
      <%= link_to "log out", session_path, :confirm => 'Are you sure?', :method => :delete %>
    <% else %>
      <%= link_to "sign up", new_user_path %>
      <%= link_to "log in", new_session_path %>
    <% end %>
  </header>
  <%= yield %>
  <footer></footer>
</div>
</body>
</html>
